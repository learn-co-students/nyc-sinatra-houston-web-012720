<h2>Edit <%=@landmark.name%></h2>

<!-- add content here -->
<form action= "/landmarks/<%=@landmark.id%>/edit" method="post">
  <input type = "hidden" name= "_method" value = "patch">
  <label>Name:</label>
  <input type = "text" name="name" placeholder="<%=@landmark.name%>">
  <!-- landmark[name] landmark[year_completed]-->
  <label>Figure:</label>
  <select name = "figure_id">
    <%@figures.each { |figure| %>
    <option  value = <%=figure.id%>><%=figure.name%></option>
    <%}%>
  </select>
  <label>Year completed:</label>
  <input type = "text" name="year_completed" placeholder="<%=@landmark.year_completed%>">
  <input type = "submit" name= "Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
