<h2>Create New Landmark</h2>

<!-- add content here landmark[name] landmark[year_completed] -->
<form action= "/landmarks/new" method="post">
  <label>Name:</label>
  <input type = "text" name="landmark_name">
  <label>Figure:</label>
  <select name = "figure_id" >
    <%@figures.each { |figure| %>
    <option value = <%=figure.id%>><%=figure.name%></option>
    <%}%>
  </select>
  <label>Year completed:</label>
  <input type = "text" name="landmark_year_completed">
  <input type = "submit" value = "Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
