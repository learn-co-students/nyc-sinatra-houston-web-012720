<h2>Create New Figure</h2>

<form action='/figures', method='post'>

  <label>Name </label>
  <input type='text', name='figure[name]'>
  <br><br>
  
  <label>Titles</label><br><br>

  <% @titles.each do |t| %>
    <label><%= t.name %></label>
    <input type='checkbox', name='figure[title_ids][]', value='<%= t.id %>'>
    <br>
  <% end %>  

  <label>Create New Title:</label><br>
  <input type='text', name='title[name]'><br>

  <label>Landmarks</label><br><br>
  <% @landmarks.each do |l| %>
    <label><%= l.name %></label>
    <input type='checkbox', name='figure[landmark_ids][]', value='<%= l.id %>'>
    <br>
  <% end %>  
  
  <label>Create New Landmarks:</label><br>
  <label>Name: <input type='text', name='landmark[name]'></label><br>
  <label>Year: </label>
  <input type='text', name='landmark[year]'>
  <input type='submit', value='Create New Figure'>

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
